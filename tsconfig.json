{
  "compilerOptions": {
    "noEmit": true, // Cela désactive la génération des fichiers .js
    "strict": false, // Désactive les règles strictes pour une flexibilité accrue
    "skipLibCheck": true, // Ignore la vérification des types dans les bibliothèques
    "allowJs": true, // Permet d'utiliser du JavaScript en même temps que du TypeScript
    "esModuleInterop": true, // Facilite l'importation des modules CommonJS
    "module": "esnext", // Utilise le système de module ES
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
